@page
@model LogoutModel
@{
    ViewData["Title"] = "Изход";
}

<style>
    .logoutBtn {
        background-color: transparent;
        border: 3px solid white;
        color: white;
    }
    .logoutBtn:hover{
        color: white;
    }
    .nav-link {
        color: white !important;
    }
    .navbar {
        background-color: #600013 !important;
    }

    footer {
        background-color: #600013 !important;
        text-align: center;
        font-size: 23px;
    }
</style>
<link rel="stylesheet" href="~/css/Home/HomeStyles.css" />
<header>
    <h1 class="text-light mb-5">Изход от профила</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="logoutBtn btn btn-lg">Изход</button>
            </form>
        }
        else
        {
            <p>Успешно излязохте</p>
        }
    }
</header>
