@using Onyx.ViewModels
@{
    ViewData["Title"] = "Въпроси";
}
@model IEnumerable<Question>;

<head>
    <style>
        h1{
            color: #A7C99B;
            text-align: center;
        }
        .card{
            background-color: #687B61;
            color: white;
        }
        hr{
            border: 3px solid white;
            opacity: 0.8;
            border-radius: 6px;
        }
        .answer{
            margin: 10px;
            border: 3px solid white;
            padding: 10px;
            border-radius: 6px;
        }
        .questions{
            display: grid;
            grid-template-columns: auto auto;
            gap: 20px;
        }
    </style>
</head>
<body>
    <h1>Въпроси</h1>
    <a asp-action="Index" asp-controller="Quizzes" class="btn btn-success">Назад</a>
    <a asp-action="Create" asp-controller="Questions" class="btn btn-success" asp-route-quizId="@ViewBag.quizId">
        Създаване
    </a>
    <div class="container">
        <div class="row questions">
            @foreach(var question in Model)
            {
                <div class="card col-sm-12 col-md-6 col-lg-6 col-xl-6 m-3" style="width: 100%; height: 300px; padding: 1rem">
                    <div class="row">
                        <h2>@question.Title</h2>
                        <hr />
                        <div class="row">
                            <div class="col-6">
                                <div class="answer"><b>A:</b> @question.AnswerA</div>
                                <div class="answer"><b>C:</b> @question.AnswerC</div>
                            </div>
                            <div class="col-6">
                                <div class="answer"><b>B:</b> @question.AnswerB</div>
                                <div class="answer"><b>D:</b> @question.AnswerD</div>
                            </div>
                            <div><b>Верен отговор: </b>@question.CorrectAnswer</div>
                            <div><b>Номер на въпрос: </b>@question.QuestionNumber</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>